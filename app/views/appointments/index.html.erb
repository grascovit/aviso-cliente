<div class="row">
  <div class="col-12 mx-auto">
    <h4 class="my-4 text-center">
      <%= t('.header') %>
    </h4>
    <%= link_to new_appointment_path, class: 'float-right btn btn-sm btn-primary my-2' do %>
      <%= t('.new_appointment') %>
      <i class="fas fa-plus"></i>
    <% end %>
    <div class="table-responsive">
      <table class="table text-center">
        <thead>
        <tr>
          <th><%= t('.client') %></th>
          <th><%= t('.start_at') %></th>
          <th><%= t('.end_at') %></th>
          <th><%= t('.address') %></th>
          <th><%= t('.actions') %></th>
        </tr>
        </thead>
        <tbody>
        <% @appointments.each do |appointment| %>
          <tr>
            <td><%= appointment.client.first_name %></td>
            <td><%= l(appointment.start_at, format: :short) %></td>
            <td><%= appointment.end_at ? l(appointment.end_at, format: :short) : nil %></td>
            <td><%= appointment.address %></td>
            <td class="actions">
              <%= link_to edit_appointment_path(appointment), class: 'btn btn-sm btn-warning' do %>
                <i class="fas fa-pencil-alt fa-inverse"></i>
              <% end %>
              <%= link_to appointment, method: :delete, data: { confirm: t('.confirmation_message') }, class: 'btn btn-sm btn-danger' do %>
                <i class="fas fa-trash"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
